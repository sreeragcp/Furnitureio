                <script>


                    let months
                    let ordersByMonth
                    let revenueByMonth

                    const getChartData = async () => {
                        console.log("inside getChat ........................")
                        const response = await fetch('/admin/getChartData', {
                            headers: { 'Content-Type': "application/json" },
                        })
                        const data = await response.json()

                        console.log(data, 346)

                        months = data.months
                        console.log(typeof months, months)
                        ordersByMonth = data.odersByMonth
                        revenueByMonth = data.revnueByMonth

                        //graph functions
                        salesGraph(months, ordersByMonth)
                        revenue(months, revenueByMonth)

                    }

                    getChartData()


                    function salesGraph(months, ordersByMonth) {
                        const ctx = document.getElementById('myChart1');
                        new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: months,
                                datasets: [{
                                    label: '# of Sales',
                                    data: ordersByMonth,
                                    borderWidth: 1,
                                    backgroundColor: 'rgba(54, 162, 235, 0.5)', // Change the background color of bars
                                    borderColor: 'rgba(54, 162, 235, 1)', // Change the border color of bars
                                }]
                            },
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
                            }
                        });
                    }


                    console.log(data, 387)


                    function revenue(months, revenueByMonth) {
                        const ctx1 = document.getElementById('myChart');
                        new Chart(ctx1, {
                            type: 'line',
                            data: {
                                labels: months,
                                datasets: [{
                                    label: '# Revenue',
                                    data: revenueByMonth,
                                    borderWidth: 1,
                                    borderColor: 'rgba(255, 99, 132, 1)', // Change the line color
                                    backgroundColor: 'rgba(255, 99, 132, 0.2)', // Change the background color below the line
                                }]
                            },
                            options: {
                                scales: {
                                    y: {
                                        beginAtZero: true
                                    }
                                }
